
<!DOCTYPE html>
<html>
<head>
  <title>VR Outpost Online Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("vrlogo.png") %>
    <%= @page_title || "VR Outpost" %>
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><%= link_to 'Home', store_path %></li>
        <li><%= link_to 'About', store_about_path %></li>
        <li><%= link_to 'Terms', store_terms_path %></li>
        <li><%= link_to 'Privacy', store_privacy_path %></li>
        <li><%= link_to 'Contact', store_contact_path %></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
