
<!DOCTYPE html>
<html>
<head>
  <title><%= t('.html_title') %></title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("vrlogo.png") %>
    <%= @page_title || t('.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
      	<% if @cart %>
      		<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
      			<%= render @cart %>
      		<% end %>
      	<% end %>
      </div>
      
      <ul>
        <li><%= link_to t('.home'), store_path %></li>
        <li><%= link_to t('.about'), store_about_path %></li>
        <li><%= link_to t('.terms'), store_terms_path %></li>
        <li><%= link_to t('.privacy'), store_privacy_path %></li>
        <li><%= link_to t('.contact'), store_contact_path %></li>
      </ul>
      
      <% if nil == session[:user_id] %>
      	<%= button_to t('.login'), login_path, method: :get %>
      <% else %>
      	<ul>
      		<li><%= link_to t('.orders'), orders_path %></li>
      		<li><%= link_to t('.products'), products_path %></li>
      		<li><%= link_to t('.users'), users_path %></li>
      	</ul>	
      	<%= button_to t('.logout'), logout_path, method: :delete %>
      <% end %>
      
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
