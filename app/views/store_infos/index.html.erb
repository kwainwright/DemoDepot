<p id="notice"><%= notice %></p>

<h1>Listing Store Information</h1>

<table>
  <thead>
    <tr>
      <th>About</th>
      <th>Terms</th>
      <th>Street</th>
      <th>Street number</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Phone number</th>
      <th>Fax number</th>
      <th>Email</th>
      <th>Privacy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_infos.each do |store_info| %>
      <tr>
        <td><%= store_info.about %></td>
        <td><%= store_info.terms %></td>
        <td><%= store_info.street %></td>
        <td><%= store_info.street_number %></td>
        <td><%= store_info.city %></td>
        <td><%= store_info.state %></td>
        <td><%= store_info.zipcode %></td>
        <td><%= store_info.phone_number %></td>
        <td><%= store_info.fax_number %></td>
        <td><%= store_info.email %></td>
        <td><%= store_info.privacy %></td>
        <td><%= link_to 'Show', store_info %></td>
        <td><%= link_to 'Edit', edit_store_info_path(store_info) %></td>
        <td><%= link_to 'Destroy', store_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

